<div class="experiences">
    <div class="subtitle">
        {{ .Labels.Experiences }}
    </div>
    {{$since := .Labels.Since}}
    {{range .Work }}
        <div class="element">
            <div class="position">
                {{.Position}}
                <span>| {{.Company}}</span>
            </div>

            <div class="dates">
                <span>{{.Location}}</span>
                |
                {{if .EndDate}}
                    {{.StartDate}} - {{.EndDate}}
                {{else}}
                    {{$since}} {{.StartDate}}
                {{end}}
            </div>

            <div class="description">
                {{.Summary}}
            </div>
        </div>
    {{end}}
</div>
